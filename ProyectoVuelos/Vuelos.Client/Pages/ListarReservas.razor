@page "/reservas"
@using Vuelos.Shared
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Mis Reservas</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>🎟️ Listado de Reservas</h3>
        <a href="vuelos" class="btn btn-primary">
            + Nueva Reserva
        </a>
    </div>

    @if (reservas == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p>Cargando reservas...</p>
        </div>
    }
    else if (reservas.Count == 0)
    {
        <div class="alert alert-info shadow-sm">
            No hay reservas activas en este momento. ¡Ve a "Vuelos" para crear una!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm bg-white rounded">
                <thead class="table-dark">
                    <tr>
                        <th>#ID</th>
                        <th>Pasajero</th>
                        <th>Vuelo</th>
                        <th>Fecha Vuelo</th>
                        <th class="text-center">Plazas</th>
                        <th class="text-end">Total Pagado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in reservas)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td class="fw-bold">@item.NombrePasajero</td>
                            <td>
                                @item.Origen <i class="bi bi-arrow-right text-muted"></i> @item.Destino
                            </td>
                            <td>@item.FechaVuelo</td>
                            <td class="text-center">
                                <span class="badge bg-secondary rounded-pill">@item.AsientosReservados</span>
                            </td>
                            <td class="text-end fw-bold text-success">
                                @item.ImportePagado.ToString("C")
                            </td>
                            <td class="text-center">
                                <button class="btn btn-outline-danger btn-sm" @onclick="() => CancelarReserva(item.Id)">
                                    🗑️ Cancelar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<ReservaDto>? reservas;

    protected override async Task OnInitializedAsync()
    {
        await CargarReservas();
    }

    private async Task CargarReservas()
    {
        try
        {
            // OJO: Asegúrate de que tu Controller devuelve List<ReservaDto>
            reservas = await Http.GetFromJsonAsync<List<ReservaDto>>("api/Reserva");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando reservas: {ex.Message}");
        }
    }

    private async Task CancelarReserva(int id)
    {
        // Confirmación sencilla usando JavaScript nativo
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que quieres cancelar la reserva #{id}?");

        if (confirmado)
        {
            var respuesta = await Http.DeleteAsync($"api/Reserva/{id}");

            if (respuesta.IsSuccessStatusCode)
            {
                // Si se borra bien, recargamos la lista
                await CargarReservas();
            }
            else
            {
                Console.WriteLine("Error al cancelar la reserva.");
            }
        }
    }
}